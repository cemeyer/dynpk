import os, sys, subprocess, re, shutil, stat

if len(sys.argv) < 3:
    print "Usage: %s fname output-dir" % (os.path.basename(sys.argv[0]))
    sys.exit(1)
FNAME, DIRN = sys.argv[1], sys.argv[2]

os.mkdir( DIRN )

p = subprocess.Popen("ldd %s | grep '=>'" % FNAME,
                     shell = True,
                     stdout = subprocess.PIPE)
so, se = p.communicate()
assert p.wait() == 0

for l in re.findall( "/[^ ]+", so ):
    shutil.copy( l, DIRN )

# Copy the binary across
shutil.copy( FNAME, DIRN )
# Remove executable permissions from it
# as it has to be run through the wrapper script
os.chmod( os.path.join( DIRN, os.path.basename(FNAME) ),
          stat.S_IRUSR | stat.S_IWUSR )

# Now copy the dynamic linker and our auditor across
shutil.copy( "/lib/ld-linux.so.2", DIRN )
shutil.copy( "./libaudit.so", DIRN )

wrapper_name = os.path.join( DIRN, "%s-wrapped" % os.path.basename(FNAME) )
f = open( wrapper_name , "w" )
f.write( """#!/bin/bash

SCRIPT_DIR="${BASH_SOURCE[0]}";
if([ -h "${SCRIPT_DIR}" ]) then
  while([ -h "${SCRIPT_DIR}" ]) do SCRIPT_DIR=`readlink "${SCRIPT_DIR}"`; done
fi
pushd . > /dev/null
cd `dirname ${SCRIPT_DIR}` > /dev/null
SCRIPT_DIR=`pwd`;
popd  > /dev/null

export LD_LIBRARY_PATH=$SCRIPT_DIR
export AUDIT_PREFIX=$SCRIPT_DIR
exec $SCRIPT_DIR/ld-linux.so.2 --audit libaudit.so $SCRIPT_DIR/%s $@
""" % os.path.basename(FNAME) )
f.close()

# Add executable permissions
os.chmod( wrapper_name, stat.S_IRUSR | stat.S_IWUSR | stat.S_IXUSR )
